[flake8]
# Основные игнорируемые правила (docstrings)
ignore = D100, D101, D102, D103, D104, D105, D106
extend-ignore = I
# Дополнительные игнорируемые правила (все в одной строке)
extend-ignore = I, N806, E302

# Исключаемые директории
exclude =
    */migrations/*,
    .git,
    __pycache__,
    */settings/*